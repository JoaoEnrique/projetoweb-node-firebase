<div class="container">
    {{> nav}}
    
    <div class="row">
        <div class="col bg-white rounded">
            {{#if success}}
                {{> message_success}}
            {{/if}}

            {{#if danger}}
                {{> message_danger}}
            {{/if}}

            {{#if agendamento}}
            {{/if}}

            <p class="text-start fs-5">Cadastrar - Agendamento de Potenciais Clientes</p>
            <p class="text-start fs-6">Sistema Utilizado para agendamento de serviços.</p>
            <p>
                <form action="{{#if agendamento}}/atualizar{{else}}/cadastrar{{/if}}" method="POST">
                <input type="hidden" name="id" id="id"  value="{{#if agendamento}}{{agendamento.id}}{{/if}}">

                    <div class="mb-3 text-start">
                        <label class="form-label">Nome:</label>
                        <input type="name" name="nome" {{#if agendamento}} value="{{agendamento.nome}}"  {{/if}} class="form-control" id="nome">
                    </div>
                    <div class="mb-3 text-start">
                        <label class="form-label">Telefone:</label>
                        <input type="number" {{#if agendamento}} value="{{agendamento.telefone}}"  {{/if}} name="telefone" class="form-control" id="telefone" placeholder="(00)00000-0000">
                    </div>
                    <div class="mb-3 text-start">
                        <label class="form-label">Origem:</label>
                        <select name="origem" class="form-select" aria-label="Default select example">
                            <option {{#if agendamento}} {{#if (ifEquals agendamento.origem 'celular')}} selected  {{/if}}{{/if}} value="celular" selected>Celular</option>
                            <option {{#if agendamento}} {{#if (ifEquals agendamento.origem 'whatsapp')}} selected  {{/if}}{{/if}} value="whatsapp">Whatsapp</option>
                            <option {{#if agendamento}} {{#if (ifEquals agendamento.origem 'telefone_fixo')}} selected  {{/if}}{{/if}} value="telefone_fixo">Telefone Fixo</option>
                        </select>
                    </div>
                    <div class="mb-3 text-start">
                        <label class="form-label">Data do Contato:</label>
                        <input type="date" {{#if agendamento}} value="{{agendamento.data_contato}}"  {{/if}} name="data_contato" class="form-control" id="data_contato" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3 text-start">
                        <label class="form-label">Observação:</label>
                        <textarea name="observacao" class="form-control" placeholder="" id="observacao" style="height: 100px">{{#if agendamento}}{{agendamento.observacao}}{{/if}}</textarea>
                    </div>
                    <div class="mb-3 text-start">
                        <button type="submit" class="btn btn-primary">
                            {{#if agendamento}}Atualizar{{else}} Cadastrar{{/if}}
                        </button>
                    </div>
                </form>
            </p>
        </div>
    </div>
</div>